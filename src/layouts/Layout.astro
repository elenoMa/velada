---
// Supports weights 100-900
import '@fontsource-variable/jost';
import Noice from '../components/noice.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Evento de boxeo entre streamers y creadores de contenido, organizado por Ibai Llanos" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="cannonical" href="https://lavelada.es"/>
		<title>{title}</title>
	</head>
	<body>
		<Noice />
		<div class="max-w-6xl px-2 lg:px-10 pt-40 mx-auto">
			<slot />
		</div>
	</body>
</html>
<style is:global>

	html {
		font-family: 'Jost Variable', sans-serif;
		background: #ddd;
	}

</style>
